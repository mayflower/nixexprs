{
    "name": "cachethq/cachet",
    "description": "An open source status page system, for everyone.",
    "keywords": [
        "laravel",
        "cachet",
        "alt-three",
        "status",
        "page"
    ],
    "type": "project",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "James Brooks",
            "email": "james@alt-three.com"
        },
        {
            "name": "Graham Campbell",
            "email": "graham@alt-three.com"
        },
        {
            "name": "Joseph Cohen",
            "email": "joe@alt-three.com"
        }
    ],
    "replace": {
        "paragonie/random_compat": "*",
        "symfony/polyfill-mbstring": "*"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/mayflower/Badger"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mayflower/Emoji"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mayflower/Twitter"
        }
    ],
    "require": {
        "php": "^7.1.3 || ^8",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-xml": "*",
        "alt-three/bus": "^4.1",
        "alt-three/validator": "^4.1",
        "aws/aws-sdk-php": "^3.7",
        "bugsnag/bugsnag-laravel": "^2.15",
        "cachethq/badger": "dev-master",
        "cachethq/emoji": "dev-master",
        "cachethq/twitter": "dev-master",
        "chillerlan/php-qrcode": "^2.0",
        "doctrine/dbal": "^2.9",
        "fideloper/proxy": "^4.0",
        "fruitcake/laravel-cors": "^1",
        "graham-campbell/binput": "^9.0",
        "graham-campbell/exceptions": "^14",
        "graham-campbell/markdown": "^13",
        "guzzlehttp/guzzle": "^6.3.3",
        "jenssegers/date": "^4",
        "laravel/framework": "^8.0.0",
        "laravel/legacy-factories": "^1.3",
        "laravel/tinker": "^2.5",
        "laravel/slack-notification-channel": "^2.4",
        "mccool/laravel-auto-presenter": "^7.1",
        "nexmo/client": "^1.5",
        "pragmarx/google2fa": "^5.0",
        "predis/predis": "^1.1",
        "twig/twig": "^2.13"
    },
    "require-dev": {
        "ext-sqlite3": "*",
        "alt-three/testbench": "5.0.x-dev",
        "barryvdh/laravel-debugbar": "^3.2",
        "filp/whoops": "^2.3",
        "fzaninotto/faker": "^1.8",
        "graham-campbell/analyzer": "^3",
        "mockery/mockery": "^1.2",
        "phpunit/phpunit": "^9"
    },
    "suggest": {
        "ext-apc": "APC Support cache driver."
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "CachetHQ\\Cachet\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CachetHQ\\Tests\\Cachet\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "test": [
            "@php artisan config:clear",
            "vendor/bin/phpunit"
        ],
        "test-coverage": [
            "@php artisan config:clear",
            "vendor/bin/phpunit --coverage-clover=coverage.xml"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.4-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
